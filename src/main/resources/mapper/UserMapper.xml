<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ingram.overlap.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.ingram.overlap.bean.po.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="userName"/>
        <result column="password" property="password"/>
        <result column="password_salt" property="passwordSalt"/>
        <result column="locked" property="locked"/>
    </resultMap>
    <select id="findUserByName" resultMap="BaseResultMap">
        select user_id,username,password,password_salt,locked from sys_user where username=#{username}
    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
        insert into sys_user(username,password,password_salt,locked)
        values (#{user.userName},#{user.password},#{user.passwordSalt},#{user.locked})
    </insert>
    <delete id="delete">
        delete from sys_user
        where user_id in (
        <foreach collection="userList" separator="," item="user">
            #{user.userId}
        </foreach>
        )
    </delete>
    <update id="update">
        update sys_user
        set username=#{user.userName},
            password=#{user.password},
            password_salt=#{user.passwordSalt},
            locked=#{user.locked}
        where user_id=#{user.userId}
    </update>
</mapper>